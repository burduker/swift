source 'https://rubygems.org'

# console sugar for development
group :development, :test do
  gem 'rake'
  gem 'awesome_print'
  gem 'ruby-progressbar'
end

# templates and content parsing
gem 'yajl-ruby', :require => 'yajl'
gem 'multi_json'
gem 'slim'
gem 'redcarpet', :github => 'ujifgc/redcarpet'
gem 'sinatra-flash', :require => 'sinatra/flash'
gem 'padrino', :github => 'ujifgc/padrino-framework'

# database ORM
gem 'bcrypt-ruby'
gem 'dm-types'
gem 'dm-validations'
gem 'dm-timestamps'
gem 'dm-migrations', :require => false
gem 'dm-constraints'
gem 'dm-aggregates'
gem 'dm-core', '~> 1.2.1'
gem 'dm-mysql-adapter'

# javascript and css compressing
gem 'sinatra-assetpack', '0.2.2'

# file and picture assets
gem 'mini_magick'
gem 'carrierwave'
gem 'carrierwave-datamapper'

# authorization and authentication
gem 'omniauth'
gem 'rack-openid', :require => "rack/openid"
gem 'omniauth-openid'
