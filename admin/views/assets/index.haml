= partial 'base/index_operations'
%ul.nav.nav-pills.folders
  - klass = params[:folder_id].present? || 'active'
  %li{ :class => klass }
    = link_to pat(:all), url(:assets, :index)
  - current_account.get_folders.with(:assets).each do |folder|
    - klass = folder.id == params[:folder_id].to_i && 'active'
    %li{ :class => klass }
      = link_to folder.title, url(:assets, :index, :folder_id => folder.id)
%form.inner.multiple#multiple-assets{ :action => url(:assets, :index)/:multiple, :method => :post }
  %table.table{ :class => @objects.length > 15 && 'smart' }
    %thead
      %tr
        %th.first
        %th.title= mat(:object, :title)
        %th.title= mat(:object, :folder_id)
        %th.file= mat(:object, :file)
    %tbody
      - @objects.each do |object|
        %tr
          %td.last= mk_checkbox object
          %td= mk_edit object
          %td.nowrap= object.folder && object.folder.title
          %td= link_to object.file.size.as_size + " / #{File.extname object.file.url}", object.file.url
= partial 'base/index_operations_bottom'
