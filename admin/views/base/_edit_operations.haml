.secondary-navigation#operations
  %ul.wat-cf
    %li.first=  mk_sop :list, url(@models.to_sym, :index)
    %li{ :class => @object.new? && :active }=        mk_sop :new,  url(@models.to_sym, :new)
    - unless @object.new?
      %li.active= mk_sop :edit, url(@models.to_sym, :edit, :id => @object.id)
