.block
  = partial 'base/edit_operations'
  .content
    %h2.title
      = pat(:edit)
      = mt(:block)
    .inner
      - form_for :object, url(:blocks, :update, :id => @object.id), :method => :put, :class => 'form edit', :id => "edit-blocks" do |f|
        = partial "blocks/form", :locals => { :f => f }

- content_for :sidebar, partial("base/sidebar")
