.dialog-assets
  %ul.nav.nav-tabs#tabs-assets
    - tabs = current_account.get_folders.with(:assets)
    - @first = true
    - tabs.each do |folder|
      - data = { :url => url(:dialogs, :folder, params.merge({:folder_id => folder.id, :object_type => :assets})), :toggle => :tab }
      - if @first
        - klass = 'active'
        - @first = false
      - else
        - klass = ''
      %li.tab{ :class => klass }= link_to folder.title, "##{folder.slug}", :data => data
    %li.tab= link_to pat(:all), '#All', 'data-url' => url(:dialogs, :folder, params.merge({:folder_id => :all, :object_type => :assets})), 'data-toggle' => :tab
  .tab-content
    - @first = true
    - tabs.each do |folder|
      - if @first
        - klass = 'active'
        - @first = false
      - else
        - klass = ''
      .tab-pane{ :id => folder.slug, :class => klass }
    .tab-pane#All
:javascript
  bindTabs('#tabs-assets', '#{params.has_key?('pick') ? 'pick' : 'select'}');
