= partial 'base/edit_operations'
- form_for :object, url(:folders, :update, :id => @object.id), :method => :put, :class => 'form form-horizontal edit', :id => "edit-folders" do |f|
  = partial "folders/form", :locals => { :f => f }

- content_for :help do
  %h3= pat('menu.help')
  %ul.navigation
    %li= link_to pat('menu.add.images'), url(:images, :new, :folder_id => @object.id)
    %li= link_to pat('menu.add.assets'), url(:assets, :new, :folder_id => @object.id)
