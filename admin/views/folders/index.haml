.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:folders)
    %form.inner.multiple#multiple-folders{ :action => url(:folders, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:folder, :id)
            %th= mat(:folder, :slug)
            %th.last= check_box_tag :check_all, :checked => false
        - @objects.each do |object|
          %tr
            %td.first= object.id
            %td= link_to object.slug, url(:folders, :edit, :id => object.id)
            %td.last= check_box_tag :"check_folder[#{object.id}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
