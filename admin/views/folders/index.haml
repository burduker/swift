.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:folders)
    %form.inner.multiple#multiple-folders{ :action => url(:folders, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:object, :id)
            %th= mat(:object, :title)
            %th= mat(:object, :slug)
            %th= mt(:assets)
            %th.last= check_box_tag :check_all, :checked => false
        %tbody
          - @objects.each do |object|
            %tr
              %td.first= link_to object.id, url(:folders, :edit, :id => object.id)
              %td= object.title
              %td= object.slug
              %td
                - ic = object.images.count
                - ac = object.assets.count
                - stats = []
                - stats << "#{mt(:images)}: #{ic}"  if ic > 0
                - stats << "#{mt(:assets)}: #{ac}"  if ac > 0
                = stats.join(', ')
              %td.last= check_box_tag :"check_folder[#{object.id}]", :checked => false
