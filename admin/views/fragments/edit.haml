.block
  = partial 'base/edit_operations'
  .content
    %h2.title
      = pat(:edit)
      = mt(:fragment)
    .inner
      - form_for :object, url(:fragments, :update, :id => @object.id), :method => :put, :class => 'form edit', :id => "edit-fragments" do |f|
        = partial "fragments/form", :locals => { :f => f }
