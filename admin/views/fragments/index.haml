.block
  = partial 'base/index_operations'
  %form.inner.multiple#multiple-fragments{ :action => url(:fragments, :index)/:multiple, :method => :post }
    - [:basics, :fragments].each do |var|
      - @objects = instance_variable_get :"@#{var}"
      .content
        %h2.title
          = pat(:all)
          = mt(var)
        %table.table
          %thead
            %tr
              %th.first= mat(:object, :slug)
              %th= mat(:object, :title)
              %th.last= check_box_tag :check_all, :checked => false
          - @objects.each do |object|
            %tr
              %td.first= link_to object.slug, url(:fragments, :edit, :slug => object.slug)
              %td= object.title
              %td.last= check_box_tag :"check_fragment[#{object.slug}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
