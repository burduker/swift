.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:images)
    %form.inner.multiple#multiple-images{ :action => url(:images, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:image, :id)
            %th.last= check_box_tag :check_all, :checked => false
        - @objects.each do |object|
          %tr
            %td.first= link_to object.id, url(:images, :edit, :id => object.id)
            %td.last= check_box_tag :"check_image[#{object.id}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
