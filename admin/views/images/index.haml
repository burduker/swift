= partial 'base/index_operations'
%ul.nav.nav-tabs.folders
  - klass = params[:folder].blank? && 'active'
  %li{ :class => klass }
    = link_to pat(:all), url(:images, :index)
  - current_account.get_folders.with(:images).each do |folder|
    - klass = folder.slug == params[:folder] && 'active'
    %li{ :class => klass }
      = link_to folder.title, url(:images, :index, :folder => folder.slug)
%form.inner.multiple#multiple-images{ :action => url(:images, :index)/:multiple, :method => :post }
  %table.table
    %thead
      %tr
        %th.title= mat(:object, :title)
        %th.title= mat(:object, :folder_id)
        %th.file= mat(:object, :file)
        %th.last= check_box_tag :check_all, :checked => false
    %tbody
      - @objects.each do |object|
        %tr
          %td= mk_edit object
          %td.nowrap= object.folder && object.folder.title
          %td.nowrap= link_to object.file.size.as_size + " #{File.extname object.file.url}", object.file.url, :rel => 'box-image'
          %td.last= mk_checkbox object
