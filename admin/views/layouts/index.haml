.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:layouts)
    %form.inner.multiple#multiple-layouts{ :action => url(:layouts, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:object, :slug)
            %th= mat(:object, :title)
            %th.last= check_box_tag :check_all, :checked => false
        - @objects.each do |object|
          %tr
            %td.first= link_to object.slug, url(:layouts, :edit, :slug => object.slug)
            %td= object.title
            %td.last= check_box_tag :"check_layout[#{object.slug}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
