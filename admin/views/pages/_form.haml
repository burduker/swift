= f.inputs :title, :slug
~ f.input :text, :as => :text, :markdown => true

- unless @object.root?
  = f.input :parent_id, :as => :select, :selected => @object.parent_id, :collection => Page.all, :fields => [ :title_tree, :id ], :include_blank => false

= f.input :fragment_slug, :as => :select, :selected => @object.fragment_slug, :collection => Fragment.basic, :fields => [ :title, :slug ], :include_blank => false

- allow :admin do
  = f.input :layout_slug, :as => :select, :selected => @object.layout_slug, :collection => Layout.all, :fields => [ :title, :slug ], :include_blank => false

= f.submits
