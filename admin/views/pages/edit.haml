.block
  = partial 'base/edit_operations'
  .content
    %h2.title
      = pat(:edit)
      = mt(:page)
    .inner
      - form_for :object, url(:pages, :update, :id => @object.id), :method => :put, :class => 'form edit', :id => 'edit-pages' do |f|
        = partial "pages/form", :locals => { :f => f }

- content_for :sidebar, partial("base/sidebar")
