.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:pages)
    %form.inner.multiple#multiple-pages{ :action => url(:pages, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:object, :id)
            %th= mat(:object, :title)
            %th= mat(:object, :slug)
            %th= mat(:object, :path)
            %th.publish= mat(:object, :fragment)
            %th.publish= mat(:object, :published)
            %th.last= check_box_tag :check_all, :checked => false
        - @objects.each do |object|
          %tr
            %td.first= link_to object.id, url(:pages, :edit, :id => object.id)
            %td= object.title
            %td= object.slug
            %td= object.path
            %td.tar= object.fragment.title
            %td.tar= mk_light object
            %td.last= check_box_tag :"check_page[#{object.id}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
