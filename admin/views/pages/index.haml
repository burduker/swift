.block
  = partial 'base/index_operations'
  .content
    %h2.title
      = pat(:all)
      = mt(:pages)
    %form.inner.multiple#multiple-pages{ :action => url(:pages, :index)/:multiple, :method => :post }
      %table.table
        %thead
          %tr
            %th.first= mat(:page, :id)
            %th= mat(:page, :title)
            %th= mat(:page, :slug)
            %th= mat(:page, :path)
            %th= mat(:page, :published)
            %th.last= check_box_tag :check_all, :checked => false
        - @objects.each do |object|
          %tr
            %td.first= object.id
            %td= link_to object.title, url(:pages, :edit, :id => object.id)
            %td= object.slug
            %td= object.path
            %td= mk_light object
            %td.last= check_box_tag :"check_page[#{object.id}]", :checked => false

- content_for :sidebar, partial("base/sidebar")
