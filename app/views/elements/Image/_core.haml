  @image = Image.get @args[0]
  throw :core_halt, "[Image ##{@args[0]} missing]"  unless @image
  @attrs = {}

  @attrs[:class] = []
  @attrs[:class] << 'sized'  if @opts[:width] || @opts[:height]
