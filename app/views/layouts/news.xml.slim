- title = "#{Option('site_title')} â€” #{I18n.t(:news)}"
- description = Page.first( :path => '/news' )
- description = description.meta['description']  if description.present?
doctype xml
rss version="2.0"
  channel
    title= title
    description= description || title
    link= "http://#{request.host}/"
    - @news_articles.each do |article|
      - link = se_url(article, :absolute => true)
      item
        title= article.title
        link= link
        description= strip_tags(engine_render article.info)
        pubDate= article.date.rfc822
        guid= link
