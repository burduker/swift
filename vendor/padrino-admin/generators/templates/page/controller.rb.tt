Admin.controllers :<%= @orm.name_plural %> do

  get :index do
    @objects = <%= @orm.all %>
    render '<%= @orm.name_plural %>/index'
  end

  get :new do
    @object = <%= @orm.build %>
    render '<%= @orm.name_plural %>/new'
  end

  post :create do
    @object = <%= @orm.build("params[:#{@orm.name_singular}]") %>
    if @object.save
      flash[:notice] = pat('<%= @orm.name_singular %>.created')
      redirect url_after_save
    else
      render '<%= @orm.name_plural %>/new'
    end
  end

  before :edit, :update, :destroy do
    @object = <%= @orm.find("params[:id].to_i") %>
    unless @object
      flash[:error] = pat('object.not_found')
      redirect url(:<%= @orm.name_plural %>, :index)
    end
  end

  get :edit, :with => :id do
    render '<%= @orm.name_plural %>/edit'
  end

  put :update, :with => :id do
    if @object.update(params[:<%= @orm.name_singular %>])
      flash[:notice] = pat('<%= @orm.name_singular %>.updated')
      redirect url_after_save
    else
      render '<%= @orm.name_plural %>/edit'
    end
  end

  delete :destroy, :with => :id do
    if @object.destroy
      flash[:notice] = pat('<%= @orm.name_singular %>.destroyed')
    else
      flash[:error] = pat('<%= @orm.name_singular %>.not_destroyed')
    end
    redirect url(:<%= @orm.name_plural %>, :index)
  end
end
